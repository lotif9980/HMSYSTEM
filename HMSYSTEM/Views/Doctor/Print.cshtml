@model HMSYSTEM.Models.Doctor

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Doctor Print</title>
    <style>
        body {
            font-family: Arial;
            padding: 20px;
        }

        .info-label {
            font-weight: bold;
            margin-top: 10px;
        }

        .info-value {
            margin-bottom: 10px;
        }
    </style>
</head>
<body onload="window.print();">
    <div class="row">
        <!-- Doctor Image Centered Vertically -->
        <div class="col-md-4 d-flex flex-column align-items-center pt-5 mt-5">
            <img src="~/Doctor/@Model.Picture" class="img-thumbnail rounded" alt="Doctor Image" style="max-height: 250px;" />
            <div class="fw-bold mt-2 text-center">
                @Model.FirstName @Model.LastName
            </div>
        </div>

        <!-- Doctor Info -->
        <div class="col-md-8 mt-5 pt-5">
            <h1>Basic Information</h1>
            <hr />
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="fw-bold">Name</div>
                    <div>@Model.FirstName @Model.LastName</div>
                </div>
                <div class="col-md-6">
                    <div class="fw-bold">Email</div>
                    <div>@Model.EmailAddress</div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="fw-bold">Phone</div>
                    <div>@Model.PhoneNo</div>
                </div>
                <div class="col-md-6">
                    <div class="fw-bold">Address</div>
                    <div>@Model.Address</div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="fw-bold">DOB</div>
                    <div>@Model.DateofBirth?.ToString("dd MMM yyyy")</div>
                </div>
                <div class="col-md-6">
                    <div class="fw-bold">Sex</div>
                    <div>@Model.Sex</div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="fw-bold">Designation</div>
                    <div>@Model.Designation?.DesignationName</div>
                </div>
                <div class="col-md-6">
                    <div class="fw-bold">Department</div>
                    <div>@Model.Department?.DepartmentName</div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="fw-bold">Specialist</div>
                    <div>@Model.Specialist</div>
                </div>
                <div class="col-md-6">
                    <div class="fw-bold">Biography</div>
                    <div>@Model.ShortBiography</div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="fw-bold">Status</div>
                    <div>@(Model.Status == true ? "Active" : "Inactive")</div>
                </div>
            </div>
        </div>


    </div>
    </div>
</body>
</html>
