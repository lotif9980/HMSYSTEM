@using HMSYSTEM.ViewModels
@model PaginationViewModel<Doctor>

@* @foreach(Patient patient in Model)
{
   @patient.Name
} *@

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-around">
                    <div> <h3 class="card-title">Existing Doctor List</h3></div>
                    <div>
                        <input type="text" name="name" id="searchBox" class="form-control" placeholder="Search Name" />
                    </div>
                    <div> <a class="btn btn-info" asp-controller="Doctor" asp-action="Save">Create</a></div>
                </div>



                <!-- /.card-header -->
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 10px">Id</th>
                                <th>Picture</th>
                                <th>Name</th>
                                <th>Department</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th style="width:20px;text-align:center">Action</th>
                            </tr>
                        </thead>
                        <tbody id="boadyBox">
                            @{
                                int count = ((Model.CurrentPage - 1) * Model.PageSize) + 1;
                            }
                            @foreach (Doctor doctor in Model.Items)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td style="text-align:center">
                                        <img src="~/Doctor/@doctor.Picture" alt="Image not found" width="65" height="65" />
                                    </td>
                                    <td>@doctor.FirstName @doctor.LastName</td>
                                    <td>@doctor.Department?.DepartmentName</td>
                                    <td>@doctor.EmailAddress</td>
                                    <td>@(doctor.Status==true?"Active": "Invactive")</td>
                                    <td>
                                        <div class="d-flex justify-content-center btn-group-sm ">

                                            <a class="btn btn-primary ms-2" asp-route-id="@doctor.Id" asp-controller="Doctor" asp-action="Edit">
                                                <i class="fa fa-edit"></i>
                                            </a>

                                            <a class="btn btn-danger ms-2" asp-route-id="@doctor.Id" asp-controller="Doctor" asp-action="Delete">
                                                <i class="fa fa-trash"></i>
                                            </a>

                                            <a class="btn btn-success ms-2" asp-route-id="@doctor.Id" asp-controller="Doctor" asp-action="Details">
                                                <i class="fa fa-eye"></i>
                                            </a>



                                            
                                        </div>
                                    </td>
                                </tr>
                                count++;
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
                <div class="card-footer clearfix">
                    <ul class="pagination pagination-sm m-0 float-end">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" href="?page=@(Model.CurrentPage - 1)">Previous</a>
                        </li>

                        <!-- Page Numbers -->
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i">@i</a>
                            </li>
                        }

                        <!-- Next Button -->
                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" href="?page=@(Model.CurrentPage + 1)">Next</a>
                        </li>
                    </ul>
                </div>

               
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
    $('#searchBox').on('keyup', function () {
        var name = $(this).val().trim();


                   if (name.length === 0) {
                        location.reload();
                    return;
                   }

        $.ajax({
            url: '/Doctor/GetName',
            data: { name: name }, 

            success: function (data) {
                let rows = '';

                data.forEach((item,index)=> {
                    let status = item.status ? "Active" : "Inactive";
                        let imagePath = `/Doctor/${item.picture}`; 

                    rows += `<tr>
                            <td>${index + 1}</td>
                        <td><img src="${imagePath}" alt="Doctor Image" width="65" height="65" /></td>
                        <td>${item.name}</td>
                        <td>${item.department}</td>
                        <td>${item.emailAddress}</td>
                        <td>${status}</td>
                        <td>
                              <div class="d-flex justify-content-center btn-group-sm ">

                                 <a class="btn btn-primary ms-2" href="/Doctor/Edit/${item.id}">
                               <i class="fa fa-edit"></i>
                             </a>

                             <a class="btn btn-danger ms-2" href="/Doctor/Delete/${item.id}">
                              <i class="fa fa-trash"></i>
                             </a>

                             <a class="btn btn-success ms-2" href="/Doctor/Details/${item.id}">
                                  <i class="fa fa-eye"></i>
                             </a>




                       </td>
                    </tr>`;
                });

                $('#boadyBox').html(rows);
            }
        });
    });
});

</script>