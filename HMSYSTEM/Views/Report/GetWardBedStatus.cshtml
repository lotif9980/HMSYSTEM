@using HMSYSTEM.ViewModels
@model List<WardBedViewModel>

@{
    ViewData["Title"] = "Ward Bed Report";
}

<h2>Ward Bed Report</h2>

    <div class="container">
        <form asp-action="GetWardBedStatus" method="post">
            <div class="form-group">
                <label>Select Ward</label>
                <select name="wardId" class="form-control">
                    <option value="">-- Select Ward --</option>
                    @foreach (var ward in ViewBag.Ward as List<SelectListItem>)
                    {
                        <option value="@ward.Value">@ward.Text</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">View</button>
        </form>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>Ward</th>
                    <th>Bed</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.WardName</td>
                        <td>@item.BedNumber</td>
                        <td>@(item.IsOccupied ? "Occupied" : "Available")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
