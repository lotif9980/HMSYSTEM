 @model IEnumerable<Admission> 
@using HMSYSTEM.ViewModels
@using HMSYSTEM.Enum


<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-around">
                    <div> <h3 class="card-title">Existing Admission List</h3></div>
                    <div><input placeholder="Search Patient Name" id="customSearchBox" class="form-control" /></div>
                    <div> <a class="btn btn-info" asp-controller="Admission" asp-action="Save">Create</a></div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="admissionTable" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 10px">Id</th>
                                <th>Date</th>
                                <th>Invoice No</th>
                                <th>Patient Name</th>
                                <th>P. Number</th>
                                <th>Ward Name</th>
                                <th>Bed Number</th>
                                <th>Status</th>
                                <th style="width:20px;text-align:center">Action</th>
                            </tr>
                        </thead>
                        <tbody id="dataShow">
                            @{
                                int count =1;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@(item.AdmitDate?.ToString("dd-MM-yyyy"))</td>
                                    <td>@item.InvoiceNo</td>
                                    <td>@item.Patient.FirstName @item.Patient.LastName</td>
                                    <td>@item.Patient.Phone</td>
                                    <td>@item.Bed?.Ward.Name</td>
                                    <td>@item.Bed.BedNumber</td>
                                    <td>@(item.Status == 1 ? "Active" : "Inactive")</td>
                                    <td>
                                        <div class="d-flex justify-content-center btn-group-sm ">

                                            <a class="btn btn-danger ms-2" asp-route-id="@item.Id" asp-controller="Admission" asp-action="Delete">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                            <a class="btn btn-success ms-2" asp-route-id="@item.Id" asp-controller="Admission" asp-action="Details">
                                                <i class="fa fa-eye"></i>
                                            </a>

                                            <a class="btn btn-info ms-2"
                                               asp-controller="Bill"
                                               asp-action="SaveFromAdmission"
                                               asp-route-patientId="@item.PatientId"
                                               asp-route-bedId="@item.BedId"
                                               asp-route-admissionId="@item.Id">
                                                <i class="fa fa-file-invoice"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                  count++;
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
                <div class="card-footer clearfix">
                    @* @await Html.PartialAsync("_Pagination", Model) *@
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var table = $('#admissionTable').DataTable({
            "pageLength": 10,
            "lengthMenu": [5, 10, 20, 50],
            "ordering": true,
            "paging": true,
            "info": true,
            "language": {
                "search": "",
                "searchPlaceholder": "Search",
                "lengthMenu": "_MENU_ rows",
                "info": "_TOTAL_ রেকর্ডের মধ্যে _START_ থেকে _END_ দেখানো হচ্ছে",
                "paginate": {
                    "previous": "⬅️ Previous",
                    "next": "Next ➡️"
                }
            },
            "dom": 'rt<"d-flex justify-content-between align-items-center p-2"<"p-0"l><"p-0"p>>'
        });


        $('#customSearchBox').on('keyup', function () {
            table.search(this.value).draw();
        });
    });
</script>

