@model Admission
@{
    var doctor = ViewBag.Doctor;
    var beds = ViewBag.Bed;
    var words= ViewBag.Ward;
}
<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- jQuery UI -->
<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

<div class="container-fluid mt-4">
    <div class="row g-4">
        <div class="col-12 d-flex justify-content-center">
            <div class="col-md-10">
                <div class="card card-warning card-outline mb-4">
                    <div class="btn-group-sm mt-2 ms-2">
                        <a class="btn btn-primary" asp-route-id="" asp-controller="Admission" asp-action="Index">
                            <i class="fa fa-list"></i>List
                        </a>
                    </div>

                    <div class="card-header d-flex justify-content-center fs-1">
                        <div style="text-transform: uppercase;">
                            <span style="font-size: 1.5em;">A</span>DMISSION  <span style="font-size: 1.5em;">I</span>NFORMATION
                        </div>
                    </div>

                    <form asp-action="Save" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-6">


                                    <label for="AdmitDate" class="col-form-label">Admit Date</label>
                                    <div class="input-group">
                                        <input type="text" id="AdmitDate" name="AdmitDate" class="form-control" />
                                        <span class="input-group-text">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="InvoiceNo" class="form-label">Invoice No</label>
                                    <input asp-for="InvoiceNo" class="form-control" value="@ViewBag.NextSerial" readonly />
                                </div>
                            </div>
                            <input type="hidden" id="patientId" name="PatientId" />

                            <div class="row mb-3">

                                <div class="col-md-6">
                                    <label class="form-label">Patient Phone Number </label>
                                    <input class="form-control" id="patientPhoneNumber" />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Patient Name</label>
                                    <input class="form-control" id="patientName" readonly />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">Doctor Name</label>
                                    <select name="DoctorId" id="DoctorId" class="form-control form-select">
                                        <option value="">---Select Doctor---</option>
                                        @foreach (var item in doctor)
                                        {
                                        <option value="@item.Id">@item.FirstName @item.LastName</option>
                                        }
                                    </select>
                                </div>


                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">Select Ward</label>
                                    <select id="wardDropdown" class="form-select">
                                        <option value="">-- Select Ward --</option>
                                        @foreach (var ward in words)
                                        {
                                        <option value="@ward.Id">@ward.Name</option>
                                        }
                                    </select>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Select Bed</label>
                                    <select id="bedDropdown" class="form-select" name="BedId">
                                        <option value="">-- Select Bed --</option>
                                    </select>
                                </div>
                            </div>

                            <h5 >Attendant Information</h5> <hr />
                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <label asp-for="AttendentName" class="form-label">Attendent Name</label>
                                    <input asp-for="AttendentName" class="form-control"  />
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="AttendentRelation" class="form-label">Attendent Relation</label>
                                    <input asp-for="AttendentRelation" class="form-control" />
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="AttendentPhone" class="form-label">Attendent Phone</label>
                                    <input asp-for="AttendentPhone" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="ForReason" class="form-label">For Reason</label>
                                    <input asp-for="ForReason" class="form-control" />
                                </div>

                                <div class="col-md-6 form-check">
                                    <div class="form-check mt-4">
                                        <input asp-for="Declaration" class="form-check-input" type="checkbox" id="Declaration" />
                                        <label class="form-check-label" for="Declaration">
                                            I hereby declare that the information provided is true and I agree to hospital policies.
                                        </label>
                                        <span asp-validation-for="Declaration" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="card-footer d-flex justify-content-center">
                            <button type="submit" class="btn btn-warning me-2">Save</button>
                            <button type="reset" class="btn btn-danger me-2">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $(function () {
        $("#AdmitDate").datepicker({
            dateFormat: "dd-mm-yy"
        });

        $(".input-group-text").click(function () {
            $("#AdmitDate").focus();
        });
    });

    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById("patientPhoneNumber").addEventListener("blur", function () {
            const phoneNumber = this.value.trim();

            if (phoneNumber !== "") {
                fetch(`/Admission/GetPatientPhoneNumber?phoneNumber=${phoneNumber}`)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error("Network response was not ok");
                        }
                        return response.json();
                    })
                    .then(data => {
                        console.log("✅ Response Data:", data); // Debug
                        if (data.success) {
                            document.getElementById("patientName").value = data.name;
                            document.getElementById("patientId").value = data.id;
           
            
                        } else if (data.alreadyAdded) {
                            alert("⚠️ " + data.message);
                            document.getElementById("patientName").value = "";
                            document.getElementById("patientId").value = "";
           
                        } else {
                            document.getElementById("patientName").value = "";
                            document.getElementById("patientId").value = "";
          
                            alert("❌ No patient found with this number.");
                        }
                    })
                    .catch(error => {
                        console.error("🚨 Error in fetch/catch:", error);
                        alert("🚨 Error while fetching patient data.");
                    });

            }
        });
    });




    $(document).ready(function () {
        $('#wardDropdown').on('change', function () {
            var wardId = $(this).val(); // dropdown থেকে নির্বাচিত value

            if (wardId) {
                $.ajax({
                    url: '/Admission/GetBedsByWardId',
                    type: 'GET',
                    data: { wardId: wardId }, // Query parameter পাঠানো
                    dataType: 'json',
                    success: function (data) {
                        var $bedDropdown = $('#bedDropdown');
                        $bedDropdown.empty(); // পুরানো option গুলো মুছে ফেলল
                        $bedDropdown.append('<option value="">-- Select Bed --</option>');

                        $.each(data, function (index, bed) {
                            $bedDropdown.append(
                                $('<option>', {
                                    value: bed.id,
                                    text: bed.bedNumber
                                })
                            );
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("Error fetching beds:", error);
                    }
                });
            } else {
                $('#bedDropdown').empty().append('<option value="">-- Select Bed --</option>');
            }
        });
    });



</script>
