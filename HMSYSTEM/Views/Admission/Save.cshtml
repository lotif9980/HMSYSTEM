@model Admission
@{
    var doctor = ViewBag.Doctor;
    var beds = ViewBag.Bed;
    var words= ViewBag.Ward;
}
<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- jQuery UI -->
<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

<div class="container-fluid mt-4">
    <div class="row g-4">
        <div class="col-12 d-flex justify-content-center">
            <div class="col-md-10">
                <div class="card card-warning card-outline mb-4">
                    <div class="btn-group-sm mt-2 ms-2">
                        <a class="btn btn-primary" asp-route-id="" asp-controller="Admission" asp-action="Index">
                            <i class="fa fa-list"></i>List
                        </a>
                    </div>

                    <div class="card-header d-flex justify-content-center fs-1">
                        <div style="text-transform: uppercase;">
                            <span style="font-size: 1.5em;">A</span>DMISSION INFORMATION
                        </div>
                    </div>

                    <form asp-action="Save" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-6">


                                    <label for="AdmitDate" class="col-form-label">Admit Date</label>
                                    <div class="input-group">
                                        <input type="text" id="AdmitDate" name="AdmitDate" class="form-control" />
                                        <span class="input-group-text">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="InvoiceNo" class="form-label">Invoice No</label>
                                    <input asp-for="InvoiceNo" class="form-control" value="@ViewBag.NextSerial" readonly />
                                </div>
                            </div>
                            <input type="hidden" id="patientId" name="PatientId" />

                            <div class="row mb-3">

                                <div class="col-md-6">
                                    <label class="form-label">Patient Phn </label>
                                    <input class="form-control" id="patientPhoneNumber" />


                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Patient Name</label>
                                    <input class="form-control" id="patientName" readonly />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">Doctor Name</label>
                                    <select name="DoctorId" id="DoctorId" class="form-control form-select">
                                        <option value="">---Select Doctor---</option>
                                        @foreach (var item in doctor)
                                        {
                                        <option value="@item.Id">@item.FirstName @item.LastName</option>
                                        }
                                    </select>
                                </div>


                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">Select Ward</label>
                                    <select id="wardDropdown" class="form-select">
                                        <option value="">-- Select Ward --</option>
                                        @foreach (var ward in words)
                                        {
                                        <option value="@ward.Id">@ward.Name</option>
                                        }
                                    </select>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Select Bed</label>
                                    <select id="bedDropdown" class="form-select" name="BedId">
                                        <option value="">-- Select Bed --</option>
                                    </select>
                                </div>
                            </div>

                        </div>

                        <div class="card-footer d-flex justify-content-center">
                            <button type="submit" class="btn btn-warning me-2">Save</button>
                            <button type="reset" class="btn btn-danger me-2">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $(function () {
        $("#AdmitDate").datepicker({
            dateFormat: "yy-mm-dd"
        });

        $(".input-group-text").click(function () {
            $("#AdmitDate").focus();
        });
    });

    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById("patientPhoneNumber").addEventListener("blur", function () {
            const phoneNumber = this.value.trim();

            if (phoneNumber !== "") {
                fetch(`/Admission/GetPatientPhoneNumber?phoneNumber=${phoneNumber}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            document.getElementById("patientName").value = data.name;
                            document.getElementById('patientId').value = data.id;
                            document.getElementById("fatherName").value = data.fName;
                            alert("Patient Found with this Number");
                        } else {
                            document.getElementById("patientName").value = "";
                            document.getElementById("patientId").value = "";
                            document.getElementById('fatherName').value = "";
                            alert("No patient found with this number.");
                        }
                    })
                    .catch(error => {
                        console.error("Error:", error);
                        alert("Error while fetching patient data.");
                    });
            }
        });
    });



    document.addEventListener("DOMContentLoaded", function () {
        const wardDropdown = document.getElementById("wardDropdown");
        const bedDropdown = document.getElementById("bedDropdown");

        wardDropdown.addEventListener("change", function () {
            const wardId = this.value;

            if (wardId) {
                fetch(`/Admission/GetBedsByWardId?wardId=${wardId}`)
                    .then(response => response.json())
                    .then(data => {
                        // Clear existing options
                        bedDropdown.innerHTML = '<option value="">-- Select Bed --</option>';

                        data.forEach(bed => {
                            const option = document.createElement("option");
                            option.value = bed.id;
                            option.text = bed.bedNumber;
                            bedDropdown.appendChild(option);
                        });
                    })
                    .catch(error => {
                        console.error("Error fetching beds:", error);
                    });
            } else {
                bedDropdown.innerHTML = '<option value="">-- Select Bed --</option>';
            }
        });
    });



</script>
