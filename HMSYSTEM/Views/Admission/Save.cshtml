@model Admission
@{
    var doctor = ViewBag.Doctor;
    var beds = ViewBag.Bed;
    var words= ViewBag.Ward;
}
<!-- jQuery -->

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card card-warning card-outline mb-4">

                <!-- Header -->
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="fs-4 text-uppercase">Admission Information</div>
                    <a class="btn btn-primary btn-sm" asp-route-id="" asp-controller="Admission" asp-action="Index">
                        <i class="fa fa-list"></i> List
                    </a>
                </div>

                <!-- Form Start -->
                <form id="admissionForm" asp-action="Save" method="post" enctype="multipart/form-data">
                    <div class="card-body">

                        <!-- Admit Date & Invoice No -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="AdmitDate" class="form-label">Admit Date</label>
                                <div class="input-group">
                                    <input type="text" id="AdmitDate" name="AdmitDate" class="form-control" />
                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="InvoiceNo" class="form-label">Invoice No</label>
                                <input asp-for="InvoiceNo" class="form-control" value="@ViewBag.NextSerial" readonly />
                            </div>
                        </div>

                        <input type="hidden" id="patientId" name="PatientId" />

                        <!-- Patient Info -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Patient Phone Number</label>
                                <input class="form-control" id="patientPhoneNumber" name="PatientPhoneNumber" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Patient Name</label>
                                <input class="form-control" id="patientName" name="PatientName" readonly />
                            </div>
                        </div>

                        <!-- Doctor -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Doctor Name</label>
                                <select name="DoctorId" id="DoctorId" class="form-select doctor-dropdown">
                                    <option value="">--- Select Doctor ---</option>
                                    @foreach (var item in doctor)
                                    {
                                        <option value="@item.Id">@item.FirstName @item.LastName</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <!-- Ward & Bed -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Select Ward</label>
                                <select id="wardDropdown" name="WardId" class="form-select ward-dropdown">
                                    <option value="">-- Select Ward --</option>
                                    @foreach (var ward in words)
                                    {
                                        <option value="@ward.Id">@ward.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Select Bed</label>
                                <select id="bedDropdown" name="BedId" class="form-select bed-dropdown">
                                    <option value="">-- Select Bed --</option>
                                </select>
                            </div>
                        </div>

                        <!-- Attendant Info -->
                        <h5 class="mt-4">Attendant Information</h5>
                        <hr />
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="AttendentName" class="form-label">Attendant Name</label>
                                <input asp-for="AttendentName" class="form-control" id="AttendentName" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="AttendentRelation" class="form-label">Attendant Relation</label>
                                <input asp-for="AttendentRelation" class="form-control" id="AttendentRelation" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="AttendentPhone" class="form-label">Attendant Phone</label>
                                <input asp-for="AttendentPhone" class="form-control" id="AttendentPhone" />
                            </div>
                        </div>

                        <!-- Reason & Declaration -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ForReason" class="form-label">For Reason</label>
                                <input asp-for="ForReason" class="form-control" id="ForReason" />
                            </div>
                            <div class="col-md-6 d-flex align-items-center">
                                <div class="form-check mt-2">
                                    <input asp-for="Declaration" class="form-check-input" type="checkbox" id="Declaration" />
                                    <label class="form-check-label" for="Declaration">
                                        I hereby declare that the information provided is true and I agree to hospital policies.
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- Footer Buttons -->
                    <div class="card-footer d-flex justify-content-center">
                        <button type="submit" class="btn btn-warning me-2">Save</button>
                        <button type="reset" class="btn btn-danger me-2">Reset</button>
                    </div>
                </form>
                <!-- Form End -->

            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
         $(".ward-dropdown").select2({
             placeholder: "--Select Ward--",
             allowClear: true,
             width: '100%'
         });


         $(document).on('select2:open', () => {
             document.querySelector('.select2-search__field').focus();
         });
    });

    $(document).ready(function () {
         $(".bed-dropdown").select2({
             placeholder: "--Select Bed--",
             allowClear: true,
             width: '100%'
         });


         $(document).on('select2:open', () => {
             document.querySelector('.select2-search__field').focus();
         });
    });

    $(document).ready(function () {
         $(".doctor-dropdown").select2({
             placeholder: "--Select Doctor--",
             allowClear: true,
             width: '100%'
         });


         $(document).on('select2:open', () => {
             document.querySelector('.select2-search__field').focus();
         });
    });




    $(function () {
        $("#AdmitDate").datepicker({
            dateFormat: "dd-mm-yy",
            changeMonth: true,
            changeYear: true,
            defaultDate: new Date()   // আজকের তারিখ default হবে
        }).datepicker("setDate", new Date()); // input এও বসিয়ে দেবে

        $(".input-group-text").click(function () {
            $("#AdmitDate").focus();
        });
    });

    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById("patientPhoneNumber").addEventListener("blur", function () {
            const phoneNumber = this.value.trim();

            if (phoneNumber !== "") {
                fetch(`/Admission/GetPatientPhoneNumber?phoneNumber=${phoneNumber}`)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error("Network response was not ok");
                        }
                        return response.json();
                    })
                    .then(data => {
                        console.log("✅ Response Data:", data); // Debug
                        if (data.success) {
                            document.getElementById("patientName").value = data.name;
                            document.getElementById("patientId").value = data.id;
           
            
                        } else if (data.alreadyAdded) {
                            alert("⚠️ " + data.message);
                            document.getElementById("patientName").value = "";
                            document.getElementById("patientId").value = "";
           
                        } else {
                            document.getElementById("patientName").value = "";
                            document.getElementById("patientId").value = "";
          
                            alert("❌ No patient found with this number.");
                        }
                    })
                    .catch(error => {
                        console.error("🚨 Error in fetch/catch:", error);
                        alert("🚨 Error while fetching patient data.");
                    });

            }
        });
    });




    $(document).ready(function () {
        $('#wardDropdown').on('change', function () {
            var wardId = $(this).val(); 

            if (wardId) {
                $.ajax({
                    url: '/Admission/GetBedsByWardId',
                    type: 'GET',
                    data: { wardId: wardId }, 
                    dataType: 'json',
                    success: function (data) {
                        var $bedDropdown = $('#bedDropdown');
                        $bedDropdown.empty(); 
                        $bedDropdown.append('<option value="">-- Select Bed --</option>');

                        $.each(data, function (index, bed) {
                            $bedDropdown.append(
                                $('<option>', {
                                    value: bed.id,
                                    text: bed.bedNumber
                                })
                            );
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("Error fetching beds:", error);
                    }
                });
            } else {
                $('#bedDropdown').empty().append('<option value="">-- Select Bed --</option>');
            }
        });
    });

    $(document).ready(function() {
        $("#admissionForm").on('submit', function(e) {

            var admitDate = $("#AdmitDate").val().trim();
            var patientPhoneNumber = $("#patientPhoneNumber").val().trim();
            var patientName = $("#patientName").val().trim();
            var DoctorId = $("#DoctorId").val().trim();
            var wardDropdown = $("#wardDropdown").val().trim();
            var bedDropdown = $("#bedDropdown").val().trim();
            var AttendentName = $("#AttendentName").val().trim();
            var AttendentRelation = $("#AttendentRelation").val().trim();
            var AttendentPhone = $("#AttendentPhone").val().trim();
            var ForReason = $("#ForReason").val().trim();

            var container = $("body");
            var offset = 20;

            $(".field-alert").remove(); // পুরোনো এলার্ট মুছে ফেলা

            if(admitDate==="") offset = createAlert("❌ Admit Date is Required", container, offset);
            if(patientPhoneNumber==="") offset = createAlert("❌ Patient Phone is Required", container, offset);
            if(patientName==="") offset = createAlert("❌ Patient Name is Required", container, offset);
            if(DoctorId==="") offset = createAlert("❌ Doctor Selection is Required", container, offset);
            if(wardDropdown==="") offset = createAlert("❌ Ward Selection is Required", container, offset);
            if(bedDropdown==="") offset = createAlert("❌ Bed Selection is Required", container, offset);
            if(AttendentName==="") offset = createAlert("❌ Attendant Name is Required", container, offset);
            if(AttendentRelation==="") offset = createAlert("❌ Attendant Relation is Required", container, offset);
            if(AttendentPhone==="") offset = createAlert("❌ Attendant Phone is Required", container, offset);
            if(ForReason==="") offset = createAlert("❌ Reason is Required", container, offset);

            if($(".field-alert").length > 0) {
                e.preventDefault();
                return false;
            }

        });
    });
</script>
