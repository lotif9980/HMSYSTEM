@* @model IEnumerable<Prescription> *@

 @using HMSYSTEM.ViewModels
 @model PaginationViewModel<Prescription>


@* @foreach(Patient patient in Model)
{
   @patient.Name
} *@




<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-around">
                    <div> <h3 class="card-title">Existing Prescription List</h3></div>
                    <div>
                        <input class="form-control" id="searchBox" placeholder="Search Patinet Name"/>
                    </div>
                    <div> <a class="btn btn-info" asp-controller="Prescription" asp-action="Save">Create</a></div>
                </div>



                <!-- /.card-header -->
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 10px">Id</th>
                                <th>Date</th>
                                <th>Patient Name</th>
                                <th>Doctor Name</th>
                                <th>Department</th>
                                <th style="width:20px;text-align:center">Action</th>
                            </tr>
                        </thead>
                        <tbody id="tableDataShow">
                            @{
                                int count =((Model.CurrentPage-1)*Model.PageSize)+1;
                            }
                            @foreach (Prescription item in Model.Items)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@(item.Date?.ToString("dd-MM-yyyy"))</td>
                                    <td>@item.Patient.FirstName @item.Patient.LastName</td>
                                    <td>@item.Doctor.FirstName @item.Doctor.LastName</td>
                                    <td>@item.Department.DepartmentName</td>

                                    <td>
                                        <div class="d-flex justify-content-center btn-group-sm ">

                                            <a class="btn btn-primary ms-2" asp-route-id="@item.Id" asp-controller="Doctor" asp-action="Edit">
                                                <i class="fa fa-edit"></i>
                                            </a>

                                            <a class="btn btn-danger ms-2" asp-route-id="@item.Id" asp-controller="Prescription" asp-action="Delete">
                                                <i class="fa fa-trash"></i>
                                            </a>

                                            <a class="btn btn-success ms-2" asp-route-id="@item.Id" asp-controller="Prescription" asp-action="Details">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                count++;
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
                <div class="card-footer clearfix">
                    <ul class="pagination pagination-sm m-0 float-end">
                        <ul class="pagination pagination-sm m-0 float-end">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link" href="?page=@(Model.CurrentPage - 1)">Previous</a>
                            </li>

                            <!-- Page Numbers -->
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="?page=@i">@i</a>
                                </li>
                            }

                            <!-- Next Button -->
                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link" href="?page=@(Model.CurrentPage + 1)">Next</a>
                            </li>
                        </ul>
                    </ul>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>

<script>


   $(document).ready(function(){
      $('#searchBox').on({
        keyup:function(){
            var name=$(this).val();

            $.ajax({
                 url:'/Prescription/GetSearch',
                 data:{name:name},
                 success: function(data){
                     console.log(data)

                     let rows='';

                     data.forEach((item,index)=>{
                          let date = item.date
                             ? new Date(item.date).toLocaleDateString('en-GB', {
                                   day: 'numeric',
                                   month: 'short',
                                   year: 'numeric'
                               })
                             : "N/A";


                         rows+=`<tr>
                              <td>${index + 1}</td>
                             <td>${date}</td>
                             <td>${item.patientName}</td>
                             <td>${item.doctorName}</td>
                             <td>${item.departmentName}</td>
                             <td>
                                         <div class="d-flex justify-content-center btn-group-sm ">

                                             <a class="btn btn-primary ms-2" asp-route-id="item.Id" asp-controller="Doctor" asp-action="Edit">
                                                 <i class="fa fa-edit"></i>
                                             </a>

                                             <a class="btn btn-danger ms-2" asp-route-id="item.Id" asp-controller="Prescription" asp-action="Delete">
                                                 <i class="fa fa-trash"></i>
                                             </a>

                                             <a class="btn btn-success ms-2" asp-route-id="item.Id" asp-controller="Prescription" asp-action="Details">
                                                 <i class="fa fa-eye"></i>
                                             </a>
                                         </div>
                                     </td>
                         </tr>`
                     });

                       $('#tableDataShow').html(rows)
                        
                 }
            });
        }
      });
   
   })
</script>