@model HMSYSTEM.ViewModels.PrescriptionViewModel



@{
    var medicineList = ViewBag.Medicine as List<HMSYSTEM.Models.Medicine>;
}

<div class="position-fixed top-0 end-0 m-3" style="z-index: 9999; width:350px">
    <div class="alert alert-success alert-dismissible d-none" role="alert" id="alertMessage">
        ✅ Successfully added!
    </div>
</div>

<div class="position-fixed top-0 end-0 m-3" style="z-index: 9999; width:350px">
    <div class="alert alert-danger alert-dismissible d-none" role="alert" id="removedMessage">
        ✅ Successfully Delete!
    </div>
</div>


<form asp-action="Save" method="post" id="myForm" enctype="multipart/form-data">
    <input type="hidden" asp-for="AppointmentId" />
    <input type="hidden" asp-for="PatientId" />
    <input type="hidden" asp-for="DoctorId" />
    <input type="hidden" asp-for="DepartmentId" />
    <input type="hidden" asp-for="DesignationId" />
    <!-- Prescription Info Card -->
    <div class="card shadow p-4  m-4">
        <div class="row g-3">
            <div class="col-md-6">
                <label for="Date" class="form-label">Date</label>
                <div class="input-group">
                    <input type="text" id="dateTO" name="Date" class="form-control" value="@DateTime.Now.ToString("dd-MM-yyyy")" />
                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                </div>
            </div>
            <div class="col-md-6">
                 <label>Patient</label>
                <input type="text" asp-for="PatientName" readonly class="form-control" />
            </div>

            <div class="col-md-6">
                <label>Doctor</label>
                <input type="text" asp-for="DoctorName" readonly class="form-control" />
            </div>
            <div class="col-md-6">
                <label>Department</label>
                <input type="text" asp-for="DepartmentName" readonly class="form-control" />
            </div>
        </div>
    </div>

    <!-- Dynamic Prescription Details Card -->
    <div class="card shadow p-4 m-4">
        <div class="">
            <!-- Hidden medicine dropdown template -->
            <select id="medicineTemplate"  class="form-select d-none">
                <option value="">-- Select Medicine --</option>
                @foreach (var med in medicineList)
                {
                    <option value="@med.Id">@med.Name</option>
                }
            </select>

            <table class="table table-bordered" id="detailsTable">
                <thead>
                    <tr>
                        <th>Medicine </th>
                        <th>Dose</th>
                        <th>Duration</th>
                        <th>Instructions</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Rows will be appended here dynamically -->
                </tbody>
            </table>

           <div class="d-flex justify-content-end">
                <button type="button" id="addRowBtn" class="btn btn-primary btn-sm">+</button>
           </div>
        </div>

       
    </div>

    <div class="card shadow p-4 m-4">
        <div class="row g-3">
            <div class="col-md-6">
                <label for="Note">Note</label>
                <div>
                    <input class="form-control" name="Note" type="text" />
                    <p>
                        If you use (.) then a new line will be created.
                    </p>
                </div>
            </div>


            <div class="col-md-6">
                <label for="NextFlowUp" class="form-label">Fllow Up</label>
                <div class="input-group">
                    <input type="text" id="dateTOs" name="NextFlowUp" class="form-control" value="@DateTime.Now.ToString("dd-MM-yyyy")" />
                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow action-buttons m-4 ">
        <div class="card-body d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-warning">Save</button>
            <button type="reset" class="btn btn-danger">Reset</button>
        </div>
    </div>

  

</form>

<script>
    $(function () {
        // Datepickers
        $("#dateTO, #dateTOs").datepicker({
            dateFormat: "dd-mm-yy",
            changeMonth: true,
            changeYear: true
        });

        $(".input-group-text").click(function () {
            var targetId = $(this).data('target');
            $("#" + targetId).focus();
        });

        // Row index
        let rowIndex = 0;

        // Create row function
        function createRow(index) {
            let medicineDropdown = $("#medicineTemplate").html();

            return `<tr>
                <td>
                    <select name="PrescriptionDetails[${index}].MedicineId" class="form-select medicineSelect">
                        ${medicineDropdown}
                    </select>
                </td>
                <td><input type="text" name="PrescriptionDetails[${index}].Dose" class="form-control" /></td>
                <td><input type="text" name="PrescriptionDetails[${index}].Duration" class="form-control" /></td>
                <td><input type="checkbox" name="PrescriptionDetails[${index}].Instructions" value="true" /></td>
                <td><button type="button" class="btn btn-sm btn-danger removeRowBtn"><i class="fa fa-trash"></i></button></td>
            </tr>`;
        }

        // Initialize Select2 for medicine dropdowns
        function initSelect2(context) {
            $(context).find(".medicineSelect").select2({
                placeholder: "--Select Medicine--",
                allowClear: true,
                width: '100%',
                dropdownAutoWidth: true
            });
        }

        // Initialize other select2 dropdowns (Doctor, Patient, Department)
        // function initDoctor() {
        //     $("#DoctorId").select2({
        //         placeholder: "--Select Doctor--",
        //         allowClear: true,
        //         width: '100%',
        //         dropdownAutoWidth: true
        //     });
        // }

        function initPatient() {
            $("#PatientID").select2({
                placeholder: "--Select Patient--",
                allowClear: true,
                width: '100%',
                dropdownAutoWidth: true
            });
        }

        function initDepartment() {
            $("#departmentId").select2({
                placeholder: "--Select Department--",
                allowClear: true,
                width: '100%',
                dropdownAutoWidth: true
            });
        }

        // Initial setup
        $("#detailsTable tbody").append(createRow(rowIndex));
        initSelect2($("#detailsTable tbody tr:last"));
        rowIndex++;

        // initDoctor();
        initPatient();
        initDepartment();

        // Add new row
        $("#addRowBtn").click(function () {
            $("#detailsTable tbody").append(createRow(rowIndex));
            initSelect2($("#detailsTable tbody tr:last")); // শুধু নতুন row init করব
            rowIndex++;

            $("#alertMessage").removeClass("d-none").fadeIn();
            setTimeout(() => { $("#alertMessage").fadeOut(); }, 2000);
        });

        // Remove row
        $("#detailsTable").on("click", ".removeRowBtn", function () {
            $(this).closest("tr").remove();
            $("#removedMessage").removeClass("d-none").fadeIn();
            setTimeout(() => { $("#removedMessage").fadeOut(); }, 2000);
        });

        // Form validation and submit
        $("#myForm").on('submit', function (e) {
            e.preventDefault();

            var date = $("#dateTO").val().trim();
        

            var container = $("body");
            var offset = 20;

            $(".field-alert").remove(); // আগের alert remove

            if (date === "") offset = createAlert("❌ Date Required", container, offset);
     

            // Medicine Details Validation
            $("#detailsTable tbody tr").each(function (index, row) {
                var medicine = $(row).find("select[name*='.MedicineId']").val();
                var dose = $(row).find("input[name*='.Dose']").val().trim();
                var duration = $(row).find("input[name*='.Duration']").val().trim();

                if (!medicine) offset = createAlert(`❌ Medicine is required`, container, offset);
                if (!dose) offset = createAlert(`❌ Dose is required`, container, offset);
                if (!duration) offset = createAlert(`❌ Duration is required`, container, offset);
            });

            if ($(".field-alert").length > 0) return false;

            this.submit();
        });

        // Optional: focus on select2 search field when open
        $(document).on('select2:open', () => {
            document.querySelector('.select2-search__field').focus();
        });
    });
</script>
