@* @model IEnumerable<Department> *@
@using HMSYSTEM.ViewModels
@model PaginationViewModel<Department>


@* @foreach(Patient patient in Model)
{
   @patient.Name
} *@

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-around">
                    <div> <h3 class="card-title">Existing Department List</h3></div>
                    <div><input class="form-control" placeholder="Search Department" id="departmentName" /></div>
                    <div> <a class="btn btn-info" asp-controller="Department" asp-action="Save">Create</a></div>
                </div>



                <!-- /.card-header -->
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 10px">Id</th>
                                <th>Department Name</th>
                                <th>Status</th>
                                <th style="width:20px;text-align:center">Action</th>
                            </tr>
                        </thead>
                        @{
                            int count =((Model.CurrentPage-1)*Model.PageSize)+1;
                        }
                        <tbody id="dataTable">
                            @foreach (Department department in Model.Items)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@department.DepartmentName</td>
                                    <td>@(department.Status==true ? "Active" : "Inactive")</td>
                                    <td>
                                        <div class="d-flex justify-content-center btn-group-sm ">

                                            <a class="btn btn-primary ms-2" asp-route-id="@department.DepartmentId" asp-controller="Department" asp-action="Edit">
                                                <i class="fa fa-edit"></i>
                                            </a>

                                            <a class="btn btn-danger ms-2" asp-route-id="@department.DepartmentId" asp-controller="Department" asp-action="Delete">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                count++;
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
                <div class="card-footer clearfix">
                    <ul class="pagination pagination-sm m-0 float-end">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" href="?page=@(Model.CurrentPage - 1)">Previous</a>
                        </li>

                        <!-- Page Numbers -->
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i">@i</a>
                            </li>
                        }

                        <!-- Next Button -->
                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" href="?page=@(Model.CurrentPage + 1)">Next</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
        $('#departmentName').on('keyup',function(){
         var name=$(this).val();

         $.ajax({
            url:'/Department/GetNameSearch',
            data:{
                name:name,
            },

            success: function(data){
                let rows='';
                console.log(data)

                data.forEach(item=>{
                    rows +=`<tr>
                        <td>${item.departmentId}</td>
                        <td>${item.departmentName}</td>
                        <td>${item.status == true ? "Active" : "Inactive"}</td>
                        <td>
                                        <div class="d-flex justify-content-center btn-group-sm ">

                                            <a class="btn btn-primary ms-2" asp-route-id=${item.DepartmentId} asp-controller="Department" asp-action="Edit">
                                                <i class="fa fa-edit"></i>
                                            </a>

                                            <a class="btn btn-danger ms-2" asp-route-id="item.DepartmentId" asp-controller="Department" asp-action="Delete">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </div>
                        </td>
                    </tr>`
                
                });
                $('#dataTable').html(rows);
            }
         
         });
        
        });
    
    })
</script>