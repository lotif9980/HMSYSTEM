@using HMSYSTEM.ViewModels
@model PaginationViewModel<Designation>


<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-around">
                    <div> <h3 class="card-title">Existing Designation List</h3></div>
                    <div><input class="form-control" placeholder="Search Designation" id="SearchBox"/></div>
                    <div> <a class="btn btn-info" asp-controller="Designation" asp-action="Save">Create</a></div>

                </div>



                <!-- /.card-header -->
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 10px">Id</th>
                                <th>Designation Name</th>
                                <th>Status</th>
                                <th style="width:20px;text-align:center">Action</th>
                            </tr>
                        </thead>
                        <tbody id="dataShow">
                            @{
                                int count =((Model.CurrentPage-1)*Model.PageSize)+1;
                            }
                            @foreach (Designation designation in Model.Items)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@designation.DesignationName</td>
                                    <td>@(designation.Status ? "Active" : "Inactive")</td>
                                    <td>
                                        <div class="d-flex justify-content-center btn-group-sm ">

                                            <a class="btn btn-primary ms-2" asp-route-id="@designation.DesignationId" asp-controller="Designation" asp-action="Edit">
                                                <i class="fa fa-edit"></i>
                                            </a>

                                            <a class="btn btn-danger ms-2" asp-route-id="@designation.DesignationId" asp-controller="Designation" asp-action="Delete">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                count++;
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
                <div class="card-footer clearfix">
                    <ul class="pagination pagination-sm m-0 float-end">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" href="?page=@(Model.CurrentPage - 1)">Previous</a>
                        </li>

                        <!-- Page Numbers -->
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i">@i</a>
                            </li>
                        }

                        <!-- Next Button -->
                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" href="?page=@(Model.CurrentPage + 1)">Next</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){
        $("#SearchBox").on('keyup',function(){
            var name=$(this).val();

            $.ajax({
                url:'/Designation/GetSearch',
                data:{name:name},
                success: function(data){
                    var rows='';

                    data.forEach((item,index)=>{
                        rows+=`<tr>
                        <td>${index + 1}</td>
                        <td>${item.designationName}</td>
                        <td>${item.status?"Active":"Inactive"}</td>
                        <td>
                            <div class="d-flex justify-content-center btn-group-sm ">

                               <a class="btn btn-primary ms-2" href="/Designation/Edit/${item.designationId}">
                                 <i class="fa fa-edit"></i>
                               </a>

                               <a class="btn btn-danger ms-2" href="/Designation/Details/${item.designationId}">
                                  <i class="fa fa-trash"></i>
                               </a>
                            </div>
                        </td>
                        </tr>`
                    })
                    $("#dataShow").html(rows);
                }
            })
        })
    })
</script>