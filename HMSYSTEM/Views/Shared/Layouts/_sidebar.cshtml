@using HMSYSTEM.Enum

<style>
    .sidebarUser{
    background-color: #042a4a;
    color: #fff;
    }
</style>

@{
    var roleClaim = User.Claims.FirstOrDefault(c => c.Type == "RoleId");
    var roleId = roleClaim != null ? int.Parse(roleClaim.Value) : 0;
}


<!--begin::Sidebar-->
@if (User.Identity.IsAuthenticated)
{
    <aside class="app-sidebar sidebarUser shadow" data-bs-theme="dark">
    <!--begin::Sidebar Brand-->
    <div class="sidebar-brand">
        <!--begin::Brand Link-->
        
        <a href="/Home/Index" class="brand-link">
            <!--begin::Brand Image-->
                <img src="~/assets/img/MainLogo.png"
                 alt="Hospital"
                 class="brand-image opacity-75 shadow" /> 
                <span class="brand-text fw-light">Hospital Management</span>
        </a>
      
        <!--end::Brand Link-->
    </div>
    <!--end::Sidebar Brand-->
    <!--begin::Sidebar Wrapper-->
    <div class="sidebar-wrapper">
        <nav class="mt-2">
            <!--begin::Sidebar Menu-->
            <ul class="nav sidebar-menu flex-column"
                data-lte-toggle="treeview"
                role="menu"
                data-accordion="false">
                    
                
                    @if (roleId == (int)RoleEnum.Admin)
                    {
                        <partial name="Layouts/Menus/_Settings" />
                        <partial name="Layouts/Menus/_Designation" />
                        <partial name="Layouts/Menus/_Medicine" />
                        <partial name="Layouts/Menus/_Department" />
                        <partial name="Layouts/Menus/_Doctor" />
                        <partial name="Layouts/Menus/_Patient" />
                        <partial name="Layouts/Menus/_Schedule" />
                        <partial name="Layouts/Menus/_Appointment" />
                        <partial name="Layouts/Menus/_Prescription" />
                        <partial name="Layouts/Menus/_IPDAll" />
                        <partial name="Layouts/Menus/_ServiceItem" />
                        <partial name="Layouts/Menus/_reports" />
                        <partial name="Layouts/Menus/_User" />
                    }

                    @if (roleId == (int)RoleEnum.Manager)
                    {
                        <partial name="Layouts/Menus/_ServiceItem" />
                        <partial name="Layouts/Menus/_IPDAll" />
                        <partial name="Layouts/Menus/_reports" />
                        
                    }

                    @if (roleId == (int)RoleEnum.LocalAdmin)
                    {
                        <partial name="Layouts/Menus/_Designation" />
                        <partial name="Layouts/Menus/_Medicine" />
                        <partial name="Layouts/Menus/_Department" />
                        <partial name="Layouts/Menus/_Doctor" />
                        <partial name="Layouts/Menus/_Patient" />
                        <partial name="Layouts/Menus/_Schedule" />
                        <partial name="Layouts/Menus/_Appointment" />
                        <partial name="Layouts/Menus/_Prescription" />
                        <partial name="Layouts/Menus/_IPDAll" />
                        <partial name="Layouts/Menus/_ServiceItem" />
                    }

                    @if (roleId == (int)RoleEnum.Doctor)
                    {
                        <partial name="Layouts/Menus/_Schedule" />
                        <partial name="Layouts/Menus/_Appointment" />
                        <partial name="Layouts/Menus/_Prescription" />
                        <partial name="Layouts/Menus/_IPDAll" />
                    }

            </ul>
            <!--end::Sidebar Menu-->
        </nav>
    </div>
    <!--end::Sidebar Wrapper-->
</aside>
<!--end::Sidebar-->

}