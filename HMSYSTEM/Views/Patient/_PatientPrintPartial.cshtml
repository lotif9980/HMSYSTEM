<div class="container mt-5">
    <div class="card shadow p-4 bg-light" style="max-width: 900px; margin: auto;">
        <div class="row">
            <!-- Patient Image -->
            <div class="col-md-4 d-flex align-items-center justify-content-center mb-4 mb-md-0">
                <img src="@Url.Content("~/Patients/" + Model.Picture)" class="img-thumbnail rounded" alt="Patient Image" style="max-height: 250px;" />
            </div>

            <!-- Patient Info (Two Columns) -->
            <div class="col-md-8">
                @{
                    var labelStyle = "font-weight: bold;";
                }

                <div class="row">
                    <!-- Left Column -->
                    <div class="col-sm-6">
                        <div class="mb-2">
                            <span style="@labelStyle">Name:</span>
                            <div>@Model.FirstName @Model.LastName</div>
                        </div>
                        <div class="mb-2">
                            <span style="@labelStyle">Email:</span>
                            <div>@Model.Email</div>
                        </div>
                        <div class="mb-2">
                            <span style="@labelStyle">Phone:</span>
                            <div>@Model.Phone</div>
                        </div>
                        <div class="mb-2">
                            <span style="@labelStyle">Blood Group:</span>
                            <div>@Model.BloodGroup</div>
                        </div>
                        <div class="mb-2">
                            <span style="@labelStyle">Sex:</span>
                            <div>@Model.Sex</div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-sm-6">
                        <div class="mb-2">
                            <span style="@labelStyle">Date of Birth:</span>
                            <div>@Model.DateOfBirth?.ToString("dd MMM yyyy")</div>
                        </div>
                        <div class="mb-2">
                            <span style="@labelStyle">Address:</span>
                            <div>@Model.Address</div>
                        </div>
                        <div class="mb-2">
                            <span style="@labelStyle">Status:</span>
                            <div>@(Model.Status == true ? "Active" : "Inactive")</div>
                        </div>
                        <div class="mb-2">
                            <span style="@labelStyle">Emergency Contact:</span>
                            <div>@Model.EmergencyContact</div>
                        </div>
                        <div class="mb-2">
                            <span style="@labelStyle">Password:</span>
                            <div>••••••</div> <!-- Masked for safety -->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
