@model Patient

<div class="container-fluid mt-4">
    <div class="row g-4">
        <div class="col-12 d-flex justify-content-center">
            <div class="col-md-10">
                <div class="card card-warning card-outline mb-4">
                    <div class="btn-group-sm mt-2 ms-2">
                        <a class="btn btn-primary" asp-route-id="" asp-controller="Patient" asp-action="Index">
                            <i class="fa fa-list"></i> Patient List
                        </a>
                    </div>

                    <div class="card-header d-flex justify-content-center fs-1">
                        <div style="text-transform: uppercase;">
                            <span style="font-size: 1.5em;">P</span>ATIENT INFORMATION
                        </div>
                    </div>

                    <form asp-action="Save" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="FirstName" class="form-label">First Name</label>
                                    <input asp-for="FirstName" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="LastName" class="form-label">Last Name</label>
                                    <input asp-for="LastName" class="form-control" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <div class="position-relative">
                                        <input asp-for="Password" class="form-control pe-5" type="password" id="password" />
                                        <span class="position-absolute top-50 end-0 translate-middle-y me-3" style="cursor:pointer;" onclick="togglePassword()">
                                            <i class="fa fa-eye" id="toggleIcon"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="Phone" class="form-label">Phone</label>
                                    <input asp-for="Phone" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="BloodGroup" class="form-label">Blood Group</label>
                                    <select asp-for="BloodGroup" class="form-select">
                                        <option value="">-- Select Blood Group --</option>
                                        <option value="A+">A+</option>
                                        <option value="A-">A-</option>
                                        <option value="B+">B+</option>
                                        <option value="B-">B-</option>
                                        <option value="O+">O+</option>
                                        <option value="O-">O-</option>
                                        <option value="AB+">AB+</option>
                                        <option value="AB-">AB-</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="Sex" class="form-label">Sex</label>
                                    <select asp-for="Sex" class="form-select">
                                        <option value="">-- Select Gender --</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Others">Others</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="dateOfBirth" class="form-label">Date of Birth</label>
                                    <div class="input-group">
                                        <input type="text" id="dateOfBirth" name="DateOfBirth" class="form-control" value="@DateTime.Now.ToString("dd-MM-yyyy")" />
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="Address" class="form-label">Address</label>
                                    <input asp-for="Address" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="FatherName" class="form-label">Father Name</label>
                                    <input asp-for="FatherName" class="form-control" />

                                   
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="EmergencyContact" class="form-label">Emergency Contact</label>
                                    <input asp-for="EmergencyContact" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                 
                                        <label asp-for="ImageFile" class="form-label">Profile Picture</label>
                                        <input asp-for="ImageFile" class="form-control" type="file" />
                                
                                       
                                </div>

                            </div>

                           

                        </div>

                        <div class="card-footer d-flex justify-content-center">
                            <button type="submit" class="btn btn-warning me-2">Save</button>
                            <button type="reset" class="btn btn-danger me-2">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
      $("#dateOfBirth").datepicker({
        dateFormat: "dd-mm-yy",
        changeMonth: true,
        changeYear: true
      });

      $(".input-group-text").click(function () {
        $("#dateOfBirth").focus();
      });
    });

    function togglePassword() {
      const passwordInput = document.getElementById('password');
      const toggleIcon = document.getElementById('toggleIcon');
      const isPassword = passwordInput.type === 'password';
      passwordInput.type = isPassword ? 'text' : 'password';
      toggleIcon.classList.toggle('fa-eye');
      toggleIcon.classList.toggle('fa-eye-slash');
    }
</script>
