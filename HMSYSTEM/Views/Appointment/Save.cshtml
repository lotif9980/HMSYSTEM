@model Appointment



<div class="container-fluid mt-4">
    <div class="row g-4">
        <div class="col-12 d-flex justify-content-center">
            <div class="col-md-6">

                <!--begin::Horizontal Form-->
                <div class="card card-warning card-outline mb-4">
                    <div class="btn-group-sm">
                        <a class="btn btn-primary" asp-route-id="" asp-controller="Appointment" asp-action="Index">
                            <i class="fa fa-list"></i>
                            Appointment List
                        </a>
                    </div>
                    <!--begin::Header-->
                    <div class="card-header d-flex justify-content-center  fs-1"><div class="">Appointment Information</div></div>
                    <!--end::Header-->
                    <!--begin::Form-->
                    <form asp-action="Save" method="post" enctype="multipart/form-data">
                        <!--begin::Body-->
                        <div class="card-body">

                            <input type="hidden" name="PatientId" id="patientId" value="<!--patient id here-->" />

                            <div class="row mb-3">
                                <label asp-for="PatientPhoneNumber" class="col-sm-3 col-form-label">P. Phone Number</label>
                                <div class="col-sm-9">
                                    <input asp-for="PatientPhoneNumber" class="form-control" id="patientPhoneNumber">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label  class="col-sm-3 col-form-label">Patient Name</label>
                                <div class="col-sm-9">
                                    <input class="form-control" id="patientName" readonly>
                                </div>
                            </div>


                            <div class="row mb-3">
                                <label for="DepartmentId" class="col-sm-3 col-form-label">Department</label>
                                <div class="col-sm-9 position-relative">
                                    <select name="DepartmentId" id="DepartmentId" class="form-control form-select">
                                        <option value="">-- Select Department --</option>
                                        @foreach (var item in ViewBag.Department)
                                        {
                                            <option value="@item.DepartmentId">@item.DepartmentName</option>
                                        }
                                    </select>

                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="DoctorId" class="col-sm-3 col-form-label">Doctor</label>
                                <div class="col-sm-9 position-relative">
                                    <select name="DoctorId" id="DoctorId" class="form-control form-select">
                                        <option value="">-- Select DoctorId --</option>
                                        @foreach (var item in ViewBag.Doctor)
                                        {
                                            <option value="@item.Id">@item.FirstName @item.LastName</option>
                                        }
                                    </select>

                                </div>
                            </div>


                            <div class="row mb-3">
                                <label for="AppoinmentDate" class="col-sm-3 col-form-label">Appoinment Date</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <input type="text" id="AppoinmentDate" name="AppoinmentDate" class="form-control" />
                                        <span class="input-group-text">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>

                           @*  <div class="input-group">
                                <input type="text" id="AppoinmentDate" class="form-control" />
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div> *@
                            

                            <div class="row mb-3">
                                <label asp-for="SerialNumber" class="col-sm-3 col-form-label">Serial Number</label>
                                <div class="col-sm-9">
                                    <input asp-for="SerialNumber" class="form-control" id="SerialNumber" value="@ViewBag.NextSerial" readonly />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="Problem" class="col-sm-3 col-form-label">Problem</label>
                                <div class="col-sm-9">
                                   @*  <textarea asp-for="Problem" class="form-control" id="Problem"> *@
                                    <textarea asp-for="Problem" class="form-control" rows="4"></textarea>
                                </div>
                            </div>

                            

                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">Status</label>
                                <div class="col-sm-9">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Status" value="1" id="statusActive" />
                                        <label class="form-check-label" for="statusActive">Active</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Status" value="2" id="statusInactive" />
                                        <label class="form-check-label" for="statusInactive">Inactive</label>
                                    </div>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>

                           

                        </div>
                        <!--end::Body-->
                        <!--begin::Footer-->
                        <div class="card-footer d-flex justify-content-center">
                            <button type="submit" class="btn btn-warning me-2">Save</button>
                            <button type="reset" class="btn btn-danger me-2">Reset</button>
                        </div>
                        <!--end::Footer-->
                    </form>
                    <!--end::Form-->
                </div>
                <!--end::Horizontal Form-->
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $("#AppoinmentDate").datetimepicker({
            dateFormat: "dd-mm-yy",
            timeFormat: "HH:mm",
            changeMonth: true,
            changeYear: true
        });

        $(".input-group-text").click(function () {
            $("#AppoinmentDate").focus();
        });
    });


    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById("patientPhoneNumber").addEventListener("blur", function () {
            const phoneNumber = this.value.trim();

            if (phoneNumber !== "") {
                fetch(`/Appointment/GetPatientNameByPhone?phoneNumber=${phoneNumber}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            document.getElementById("patientName").value = data.name;
                            document.getElementById('patientId').value = data.id;
                        } else {
                            document.getElementById("patientName").value = "";
                            document.getElementById("patientId").value = "";
                            // alert("No patient found with this number.");
                        }
                    })
                    .catch(error => {
                        console.error("Error:", error);
                        alert("Error while fetching patient data.");
                    });
            }
        });
    });


  


</script>

