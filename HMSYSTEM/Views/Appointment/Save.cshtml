@using HMSYSTEM.ViewModels
@model AppointmentVM



<div class="container-fluid mt-4">
    <div class="row g-4">
        <div class="col-12 d-flex justify-content-center">
            <div class="col-md-10">

                <!--begin::Horizontal Form-->
                <div class="card card-warning card-outline mb-4">
                    <div class="btn-group-sm">
                        <a class="btn btn-primary" asp-route-id="" asp-controller="Appointment" asp-action="Index">
                            <i class="fa fa-list"></i>
                            Appointment List
                        </a>
                    </div>
                    <!--begin::Header-->
                    <div class="card-header d-flex justify-content-center  fs-1"><div class="">Appointment Information</div></div>
                    <!--end::Header-->
                    <!--begin::Form-->
                    <form asp-action="Save" method="post" id="myForm" enctype="multipart/form-data">
                        <!--begin::Body-->
                        <div class="card-body">

                            <!-- Hidden Patient ID -->
                            <input type="hidden" asp-for="PatientID" id="patientId" />

                            <!-- Phone Number & Patient Name -->
                            <div class="row mb-3">
                                <div class="col-md-6 col-12">
                                    <label asp-for="PatientPhoneNumber" class="form-label">P. Phone Number</label>
                                    <input asp-for="PatientPhoneNumber" class="form-control" id="patientPhoneNumber">
                                </div>
                                <div class="col-md-6 col-12">
                                    <label class="form-label">Patient Name</label>
                                    <input class="form-control" id="patientName" asp-for="PatientName" readonly>
                                  
                                </div>
                            </div>

                            <!-- Department & Doctor -->
                            <div class="row mb-3">
                                <div class="col-md-6 col-12">
                                    <label for="DepartmentId" class="form-label">Department</label>
                                    <select asp-for="DepartmentId" class="form-control form-select role-dropdown">
                                        <option value="">-- Select Department --</option>
                                        @foreach (var item in ViewBag.Department)
                                        {
                                            <option value="@item.DepartmentId">@item.DepartmentName</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label for="DoctorId" class="form-label">Doctor</label>
                                    <select asp-for="DoctorId" class="form-control form-select role-dropdown">
                                        <option value="">-- Select Doctor --</option>
                                        @foreach (var item in ViewBag.Doctor)
                                        {
                                            <option value="@item.Id">@item.FirstName @item.LastName</option>
                                            <span asp-validation-for="DoctorId" class="text-danger"></span>
                                        }
                                    </select>
                                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Appointment Date & Serial Number -->
                            <div class="row mb-3">
                                <div class="col-md-6 col-12">
                                    <label asp-for="AppoinmentDate" class="form-label">Appointment Date</label>
                                    <div class="input-group">
                                        <input asp-for="AppoinmentDate" type="text" class="form-control" id="AppoinmentDate" />
                                        <span class="input-group-text">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="SerialNumber" class="form-label">Serial Number</label>
                                    <input asp-for="SerialNumber" class="form-control" value="@ViewBag.NextSerial" readonly id="serial" />
                                </div>
                            </div>

                            <!-- Status -->
                            <div class="row mb-3">
                                <div class="col-12">
                                    <label class="form-label">Status</label>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Status" value="1" id="statusActive" />
                                        <label class="form-check-label" for="statusActive">Active</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Status" value="2" id="statusInactive" />
                                        <label class="form-check-label" for="statusInactive">Inactive</label>
                                    </div>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Problem (Full Width) -->
                            <div class="row mb-3">
                                <div class="col-12">
                                    <label asp-for="Problem" class="form-label">Problem</label>
                                    <textarea asp-for="Problem" class="form-control" rows="2"></textarea>
                                </div>
                            </div>

                         
                            

                        </div>
                        <!--end::Body-->
                        <!--begin::Footer-->
                        <div class="card-footer d-flex justify-content-center">
                            <button type="submit" class="btn btn-warning me-2">Save</button>
                            <button type="reset" class="btn btn-danger me-2">Reset</button>
                        </div>
                        <!--end::Footer-->
                    </form>
                    <!--end::Form-->
                </div>
                <!--end::Horizontal Form-->
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $("#AppoinmentDate").datetimepicker({
            dateFormat: "dd-mm-yy",
            timeFormat: "HH:mm",
            changeMonth: true,
            changeYear: true
        }).datetimepicker("setDate", new Date()); // আজকের তারিখ + সময় বসবে

        $(".input-group-text").click(function () {
            $("#AppoinmentDate").focus();
        });
    });


     $(document).ready(function () {
         $(".role-dropdown").select2({
             placeholder: "--Select Role--",
             allowClear: true,
             width: '100%'
         });


         $(document).on('select2:open', () => {
             document.querySelector('.select2-search__field').focus();
         });
    });


    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById("patientPhoneNumber").addEventListener("blur", function () {
            const phoneNumber = this.value.trim();

            if (phoneNumber !== "") {
                fetch(`/Appointment/GetPatientNameByPhone?phoneNumber=${phoneNumber}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            document.getElementById("patientName").value = data.name;
                            document.getElementById('patientId').value = data.id;
                            alert("Patient Found with this Number");
                        } else {
                            document.getElementById("patientName").value = "";
                            document.getElementById("patientId").value = "";
                            alert("No patient found with this number.");
                        }
                    })
                    .catch(error => {
                        console.error("Error:", error);
                        alert("Error while fetching patient data.");
                    });
            }
        });
    });


    $(document).ready(function(){
        $("#myForm").on('submit',function(){
            var patientName=$("#patientName").val().trim();
            var departmentId=$("#DepartmentId").val().trim();
            var doctorId=$("#DoctorId").val().trim();
            var appoinmentDate=$("#AppoinmentDate").val().trim();
            var serial=$("#serial").val().trim();
           

            var container=$("body");
            var offset=20;

            if(patientName==="")offset=createAlert("❌ Patient Name Required",container,offset);
            if(doctorId==="")offset=createAlert("❌ Doctor Required",container,offset);
            if(departmentId==="")offset=createAlert("❌ Departent is Required",container,offset);
            if(appoinmentDate==="")offset=createAlert("❌ Appoinment Date is Required",container,offset);
            if(serial==="")offset=createAlert("❌ Serial is Required",container,offset);
           


            if($(".field-alert").length >0) return false;
            this.submit();

        })
    })


</script>




