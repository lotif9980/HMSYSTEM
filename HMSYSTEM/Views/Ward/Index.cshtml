@* @model IEnumerable<Ward> *@
@using HMSYSTEM.ViewModels
@model PaginationViewModel<Ward>
@using HMSYSTEM.Enum


<style>
    .modal-content {
        min-height: 400px;
    }


    .modal-dialog {
        min-height: 400px;
    }
</style>

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-around">
                    <div> <h3 class="card-title">Existing Ward List</h3></div>
                    <div> <a class="btn btn-info" asp-controller="Ward" asp-action="Save">Create</a></div>
                </div>



                <!-- /.card-header -->
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 10px">Id</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Department</th>
                                <th>FloorNo</th>
                                <th style="width:20px;text-align:center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count = 1;
                            }
                            @foreach (Ward item in Model.Items)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td>@(item.Type==WardType.General?"General":
                                        item.Type==WardType.Emergency?"Emergency" : "ICU")</td>
                                    <td>@item.Department?.DepartmentName</td>
                                    <td>@item.FloorNo</td>
                                  
                                    <td>
                                        <div class="d-flex justify-content-center btn-group-sm ">

                                            <a class="btn btn-danger ms-2" asp-route-id="@item.Id" asp-controller="ward" asp-action="Delete">
                                                <i class="fa fa-trash"></i>
                                            </a>

                                            <a class="btn btn-success ms-2" asp-route-id="@item.Id" asp-controller="ward" asp-action="Details">
                                                <i class="fa fa-eye"></i>
                                            </a>

                                        </div>
                                    </td>

                                    
                                    <td>
                                        <button class="btn btn-info btn-sm" onclick="showBeds(@item.Id, '@item.Name')">Show Beds</button>
                                    </td>
                                    @* <td id="bed-info-@item.Id"></td> *@
                                </tr>
                                count++;
                            }

                        </tbody>
                    </table>
                </div>



                <!-- /.card-body -->
                <div class="card-footer clearfix">
                    <ul class="pagination pagination-sm m-0 float-end">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" href="?page=@(Model.CurrentPage - 1)">Previous</a>
                        </li>

                        <!-- Page Numbers -->
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i">@i</a>
                            </li>
                        }

                        <!-- Next Button -->
                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" href="?page=@(Model.CurrentPage + 1)">Next</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>




<div class="modal fade" id="bedModal" tabindex="-1" role="dialog" aria-labelledby="bedModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bedModalLabel">Beds Info</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="bedModalBody">
                Loading...
            </div>
        </div>
    </div>
</div>


<!-- #endregion -->
<script>
    function showBeds(wardId, wardName) {
        $('#bedModalLabel').html(`Beds in Ward: <b>${wardName}</b>`);
        $('#bedModalBody').html('Loading...');
        $('#bedModal').modal('show');

        $.ajax({
            url: `/Ward/GetBedsByWardId?wardId=${wardId}`,
            type: 'GET',
            success: function (data) {
                if (data.beds.length > 0) {
              
                    let summaryHtml = `
                        <p><strong>Total Beds:</strong> ${data.totalBeds} |
                        <strong>Occupied:</strong> ${data.occupiedBeds} |
                        <strong>Empty:</strong> ${data.emptyBeds}</p>
                    `;

                    let bedsHtml = data.beds.map(bed => {
                        let status = bed.isOccupied ? "✅ Available" : "❌ Unavailable";
                        let colorClass = bed.isOccupied ? "badge-success" : " badge-danger";
                        return `<span class="badge ${colorClass} text-light m-1" style="font-size:1.1rem; padding:8px 14px; border-radius:12px;">🛏️ ${bed.bedNumber} - ${status}</span>`;
                    }).join('');

                    $('#bedModalBody').html(summaryHtml + bedsHtml);
                } else {
                    $('#bedModalBody').html('<p>No beds found in this ward.</p>');
                }
            },
            error: function () {
                $('#bedModalBody').html('<p class="text-danger">Failed to load beds.</p>');
            }
        });
    }


 
</script>