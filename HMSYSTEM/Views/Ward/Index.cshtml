@model IEnumerable<Ward>
@using HMSYSTEM.Enum


<style>
    .modal-content {
        min-height: 400px;
    }


    .modal-dialog {
        min-height: 400px;
    }
</style>

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-around">
                    <div> <h3 class="card-title">Existing Ward List</h3></div>
                    <div> <a class="btn btn-info" asp-controller="Ward" asp-action="Save">Create</a></div>
                    <div>
                        <input  type="text"  id="searchBox" class="form-control" placeholder="search Name">
                    </div>
                </div>



                <!-- /.card-header -->
                <div class="card-body">
                    <table id="wardTable" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 10px">Id</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Department</th>
                                <th>FloorNo</th>
                                <th style="width:20px;text-align:center">Action</th>
                                <th>Bed Status</th>
                            </tr>
                        </thead>
                        <tbody id="dataShwo">
                            @{
                                int count =1;
                            }
                            @foreach (Ward item in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td>@(item.Type==WardType.General?"General":
                                        item.Type==WardType.Emergency?"Emergency" : "ICU")</td>
                                    <td>@item.Department?.DepartmentName</td>
                                    <td>@item.FloorNo</td>
                                  
                                    <td>
                                        <div class="d-flex justify-content-center btn-group-sm ">

                                            <a class="btn btn-danger ms-2" asp-route-id="@item.Id" asp-controller="ward" asp-action="Delete">
                                                <i class="fa fa-trash"></i>
                                            </a>

                                            <a class="btn btn-success ms-2" asp-route-id="@item.Id" asp-controller="ward" asp-action="Details">
                                                <i class="fa fa-eye"></i>
                                            </a>

                                        </div>
                                    </td>

                                    
                                    <td>
                                        <button class="btn btn-info btn-sm" onclick="showBeds(@item.Id, '@item.Name')">Show Beds</button>
                                    </td>
                                    @* <td id="bed-info-@item.Id"></td> *@
                                </tr>
                                count++;
                            }

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.card -->
        </div>
    </div>
</div>




<div class="modal fade" id="bedModal" tabindex="-1" role="dialog" aria-labelledby="bedModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bedModalLabel">Beds Info</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="bedModalBody">
                Loading...
            </div>
        </div>
    </div>
</div>


<!-- #endregion -->
<script>
    function showBeds(wardId, wardName) {
        $('#bedModalLabel').html(`Beds in Ward: <b>${wardName}</b>`);
        $('#bedModalBody').html('Loading...');
        $('#bedModal').modal('show');

        $.ajax({
            url: `/Ward/GetBedsByWardId?wardId=${wardId}`,
            type: 'GET',
            success: function (data) {
                if (data.beds.length > 0) {
              
                    let summaryHtml = `
                        <p><strong>Total Beds:</strong> ${data.totalBeds} |
                        <strong>Occupied:</strong> ${data.occupiedBeds} |
                        <strong>Empty:</strong> ${data.emptyBeds}</p>
                    `;

                    let bedsHtml = data.beds.map(bed => {
                          let status = bed.isOccupied ? "❌ Unavailable" : "✅ Available";
                          let colorClass = bed.isOccupied ? "badge-danger" : "  badge-success";
                         return `<span class="badge ${colorClass} text-light m-1" style="font-size:1.1rem; padding:8px 14px; border-radius:12px; width:245px;">🛏️ ${bed.bedNumber} - ${status}</span>`;
                    }).join('');

                    $('#bedModalBody').html(summaryHtml + bedsHtml);
                } else {
                    $('#bedModalBody').html('<p>No beds found in this ward.</p>');
                }
            },
            error: function () {
                $('#bedModalBody').html('<p class="text-danger">Failed to load beds.</p>');
            }
        });
    }





    $(document).ready(function () {
             var table = $('#wardTable').DataTable({
                 "pageLength": 10,
                 "lengthMenu": [5, 10, 20, 50],
                 "ordering": true,
                 "paging": true,
                 "info": true,
                 "language": {
                     "search": "",
                     "searchPlaceholder": "Search",
                     "lengthMenu": "_MENU_ rows",
                     "info": "_TOTAL_ রেকর্ডের মধ্যে _START_ থেকে _END_ দেখানো হচ্ছে",
                     "paginate": {
                         "previous": "⬅️ Previous",
                         "next": "Next ➡️"
                     }
                 },
                 "dom": 'rt<"d-flex justify-content-between align-items-center p-2"<"p-0"l><"p-0"p>>'
             });


             $('#searchBox').on('keyup', function () {
                 table.search(this.value).draw();
             });
    });

</script>