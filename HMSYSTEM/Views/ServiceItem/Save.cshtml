@model ServiceItem
@{
    ViewData["Title"] = "Service Item Save";
}

<div class="d-flex justify-content-center mt-3">
    <div class="col-md-6">

        <!--begin::Horizontal Form-->
        <div class="card card-warning card-outline mb-4">
            <!--begin::Header-->
            <div class="btn-group-sm">
                <a class="btn btn-primary" asp-route-id="" asp-controller="ServiceItem" asp-action="Index">
                    <i class="fa fa-list"></i>
                    Service Item List
                </a>
            </div>
            <div class="card-header"><div class="card-title">Service Item Information</div></div>
            <!--end::Header-->
            <!--begin::Form-->
            <form asp-action="Save" id="myForm" method="post">
                <!--begin::Body-->
                <div class="card-body">

                    <div class="row mb-3">
                        <label asp-for="ItemName" class="col-sm-3 col-form-label">Name</label>
                        <div class="col-sm-9">
                            <input asp-for="ItemName" class="form-control" id="itemName">
                            <span asp-validation-for="ItemName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Amount" class="col-sm-3 col-form-label">Amount</label>
                        <div class="col-sm-9">
                            <input asp-for="Amount" class="form-control" id="genericName">
                        </div>
                    </div>

                </div>
                <!--end::Body-->
                <!--begin::Footer-->
                <div class="card-footer d-flex justify-content-center">
                    <button type="submit" class="btn btn-warning me-2">Save</button>
                    <button type="reset" class="btn btn-danger me-2">Reset</button>
                </div>
                <!--end::Footer-->
            </form>
            <!--end::Form-->
        </div>
        <!--end::Horizontal Form-->
    </div>
</div>