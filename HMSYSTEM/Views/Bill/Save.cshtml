@model HMSYSTEM.ViewModels.BillViewModel



@{
    var billList = ViewBag.ServiceItem as List<HMSYSTEM.Models.ServiceItem>;
}

<div class="position-fixed top-0 end-0 m-3" style="z-index: 9999; width:350px">
    <div class="alert alert-success alert-dismissible d-none" role="alert" id="alertMessage">
        ✅ Successfully added!
    </div>
</div>

<div class="position-fixed top-0 end-0 m-3" style="z-index: 9999; width:350px">
    <div class="alert alert-danger alert-dismissible d-none" role="alert" id="removedMessage">
        ✅ Successfully Delete!
    </div>
</div>


<form asp-action="Save" method="post" id="myForm" enctype="multipart/form-data">

   
 
    <!-- Prescription Info Card -->
    <div class="card shadow p-4  m-4">
        <div class="row g-3">
            <div class="col-md-6">
                <label for="Date" class="form-label">Bill Date</label>
                <div class="input-group">
                    <input type="text" id="dateTO" name="BillDate" class="form-control" value="@DateTime.Now.ToString("dd-MM-yyyy")" />
                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                </div>
            </div>
            <div class="col-md-6">
                <label>Bill No</label>
                <input type="text" asp-for="BillNo" value="@ViewBag.NextSerial" readonly class="form-control" />
            </div>

            <div class="col-md-6">
                <label asp-for="PatientId" class="form-label">Patient Name</label>
                <select asp-for="PatientId" class="form-control role-dropdown">
                    <option value="">--Select Patient--</option>
                    @foreach (var item in ViewBag.Patient)
                    {
                        <option value="@item.PatientID">@item.FirstName @item.LastName</option>
                    }
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
          
           
           
        </div>
    </div>

    <!-- Dynamic Prescription Details Card -->
    <div class="card shadow p-4 m-4">
        <div class="">
            <!-- Hidden medicine dropdown template -->
            <select id="serviceList" class="form-select d-none">
                <option value="">-- Select Service --</option>
                @foreach (var med in billList)
                {
                    <option value="@med.Id">@med.ItemName</option>
                }
            </select>

            <table class="table table-bordered" id="detailsTable">
                <thead>
                    <tr>
                        <th>Service Item </th>
                        <th>Qty</th>
                        <th>Amount</th>
                        <th>TotalAmount</th>
                        <th>Charge Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Rows will be appended here dynamically -->
                </tbody>
            </table>

            <div class="d-flex justify-content-end">
                <button type="button" id="addRowBtn" class="btn btn-primary btn-sm">+</button>
            </div>
        </div>


    </div>

    <div class="card shadow p-4 m-4">
        <div class="row g-3">

            <div class="col-md-4">
                <label asp-for="TotalAmount" id="totalAmt">Total Amount</label>
                <div>
                    <input class="form-control" asp-for="TotalAmount" id="GrandTotalAmt"  type="text" readonly />
                </div>
            </div>

            <div class="col-md-4">
                <label asp-for="Discount" id="totalAmt">Discount</label>
                <div>
                    <input class="form-control" asp-for="Discount" id="discount"  type="text" value="0" />
                </div>
            </div>

            <div class="col-md-4">
                <label asp-for="NetAmount" id="NetAmount">Net Total</label>
                <div>
                    <input class="form-control" asp-for="NetAmount" id="netTotal" type="text" readonly />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label for="Note">Note</label>
                <div>
                    <input class="form-control" name="Note" type="text" />
                    <p>
                        If you use (.) then a new line will be created.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <label asp-for="PaymentAmt">Payment Amount</label>
                <input class="form-control" asp-for="PaymentAmt" id="paymentAmt" type="number" value="0" />
            </div>

            <div class="col-md-4">
                <label asp-for="DueAmount">Due Amount</label>
                <input class="form-control" asp-for="DueAmount" id="dueAmt" type="number" readonly />
            </div>
        </div>
    </div>

    <div class="card shadow action-buttons m-4 ">
        <div class="card-body d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-warning">Save</button>
            <button type="reset" class="btn btn-danger">Reset</button>
        </div>
    </div>



</form>

<script>

     $(document).ready(function () {
         $(".role-dropdown").select2({
             placeholder: "--Select Patient--",
             allowClear: true,
             width: '100%'
          });


            $(document).on('select2:open', () => {
                 document.querySelector('.select2-search__field').focus();
            });
     });

     
         $(function () {
        $("#dateTO").datepicker({
            dateFormat: "dd-mm-yy",
            changeMonth: true,
            changeYear: true
        });

    
        let rowIndex = 0;

        // ✅ Row তৈরি ফাংশন
        function createRow(index) {
            let serviceDropdown = $("#serviceList").html();

            return `<tr>
                <td>
                    <select name="BillDetail[${index}].ServiceItemId" class="form-select service-select">
                        ${serviceDropdown}
                    </select>
                </td>
                <td><input type="number" name="BillDetail[${index}].Qty" class="form-control qty" min="0" value="1" /></td>
                <td><input type="number" name="BillDetail[${index}].Amount" class="form-control amount" min="0" value="0" /></td>
                <td><input type="number" name="BillDetail[${index}].TotalAmount" class="form-control total" readonly value="0" /></td>
                <td><input type="text" id="dateTOCharge" name="BillDetail[${index}].ChargeDate" class="form-control" value="@DateTime.Now.ToString("dd-MM-yyyy")" /></td>
                <td><button type="button" class="btn btn-sm btn-danger removeRowBtn"><i class="fa fa-trash"></i></button></td>
            </tr>`;
        }

      $(document).ready(function () {
        $(document).on("focus", "#dateTOCharge", function () {
            $(this).datepicker({
                dateFormat: "dd-mm-yy", // Format
                changeMonth: true,
                changeYear: true
            }).datepicker("show");
        });
      });

        // ✅ প্রথম Row
        $("#detailsTable tbody").append(createRow(rowIndex));
        rowIndex++;
        initSelect2(); // প্রথম Row এর Service Dropdown কে Select2 করো

        // ✅ নতুন Row Add
        $("#addRowBtn").click(function () {
            $("#detailsTable tbody").append(createRow(rowIndex));
            rowIndex++;
            initSelect2(); // নতুন Row যোগ হলে Select2 করো

            $("#alertMessage").removeClass("d-none").fadeIn();
            setTimeout(() => { $("#alertMessage").fadeOut(); }, 2000);
        });

        // ✅ Service Dropdown এ Select2 চালু
        function initSelect2() {
            $(".service-select").select2({
                placeholder: "-- Select Service --",
                allowClear: true,
                width: '100%'
            });
        }

        // ✅ Row Remove
        $("#detailsTable").on("click", ".removeRowBtn", function () {
            $(this).closest("tr").remove();
            calculateGrandTotal();
            $("#removedMessage").removeClass("d-none").fadeIn();
            setTimeout(() => { $("#removedMessage").fadeOut(); }, 2000);
        });

        // ✅ Qty বা Amount পরিবর্তন হলে Row Total হিসাব
        $("#detailsTable").on("input", ".qty, .amount", function () {
            let row = $(this).closest("tr");
            let qty = parseFloat(row.find(".qty").val()) || 0;
            let amount = parseFloat(row.find(".amount").val()) || 0;
            let total = qty * amount;
            row.find(".total").val(total.toFixed(2));
            calculateGrandTotal();
        });

        // ✅ ফিল্ডে ক্লিক করলে সিলেক্ট
        $("#detailsTable").on("focus", ".qty, .amount", function () {
            $(this).select();
        });

        $("#discount").on("focus", function () { $(this).select(); });
        $("#paymentAmt").on("focus", function () { $(this).select(); });

        // ✅ Grand Total হিসাব
        function calculateGrandTotal() {
            let grandTotal = 0;
            $(".total").each(function () {
                grandTotal += parseFloat($(this).val()) || 0;
            });
            $("#GrandTotalAmt").val(grandTotal.toFixed(2));
            calculateNetTotal();
        }

        // ✅ Discount দিলে Net Total
        $("#discount").on("input", function () {
            calculateNetTotal();
        });

        function calculateNetTotal() {
            let grandTotal = parseFloat($("#GrandTotalAmt").val()) || 0;
            let discount = parseFloat($("#discount").val()) || 0;
            let netTotal = grandTotal - discount;
            if (netTotal < 0) netTotal = 0;
            $("#netTotal").val(netTotal.toFixed(2));
            calculateDue();
        }

        // ✅ Payment দিলে Due হিসাব
        $("#paymentAmt").on("input", function () {
            calculateDue();
        });

        function calculateDue() {
            let netTotal = parseFloat($("#netTotal").val()) || 0;
            let payment = parseFloat($("#paymentAmt").val()) || 0;
            let due = netTotal - payment;
            if (due < 0) due = 0;
            $("#dueAmt").val(due.toFixed(2));
        }
    });
</script>
