@model Medicine

<div class="d-flex justify-content-center mt-3">
    <div class="col-md-6">

        <!--begin::Horizontal Form-->
        <div class="card card-warning card-outline mb-4">
            <!--begin::Header-->
            <div class="btn-group-sm">
                <a class="btn btn-primary" asp-route-id="" asp-controller="Medicine" asp-action="Index">
                    <i class="fa fa-list"></i>
                    Medicine List
                </a>
            </div>
            <div class="card-header"><div class="card-title">Medicine Information</div></div>
            <!--end::Header-->
            <!--begin::Form-->
            <form asp-action="Save" method="post">
                <!--begin::Body-->
                <div class="card-body">

                    <div class="row mb-3">
                        <label asp-for="Name" class="col-sm-3 col-form-label">Name</label>
                        <div class="col-sm-9">
                            <input asp-for="Name" class="form-control" id="departmentName">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="GenericName" class="col-sm-3 col-form-label">Generic Name</label>
                        <div class="col-sm-9">
                            <input asp-for="GenericName" class="form-control" id="genericName">
                        </div>
                    </div>


                    <div class="row mb-3">
                        <label asp-for="Strength" class="col-sm-3 col-form-label">Strength</label>
                        <div class="col-sm-9">
                            <input asp-for="Strength" class="form-control" id="strength">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Form" class="col-sm-3 col-form-label">Form</label>
                        <div class="col-sm-9">
                            <input asp-for="Form" class="form-control" id="form">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">Status</label>
                        <div class="col-sm-9">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="IsActive" value="true" id="isActive" checked />
                                <label class="form-check-label" for="isActive">Active</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="IsActive" value="false" id="statusInactive" />
                                <label class="form-check-label" for="statusInactive">Inactive</label>
                            </div>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                    </div>


                </div>
                <!--end::Body-->
                <!--begin::Footer-->
                <div class="card-footer d-flex justify-content-center">
                    <button type="submit" class="btn btn-warning me-2">Save</button>
                    <button type="reset" class="btn btn-danger me-2">Reset</button>
                </div>
                <!--end::Footer-->
            </form>
            <!--end::Form-->
        </div>
        <!--end::Horizontal Form-->
    </div>
</div>
