@model User

<div class="d-flex justify-content-center mt-3">
    <div class="col-md-6">

        <!--begin::Horizontal Form-->
        <div class="card card-warning card-outline mb-4">
            <!--begin::Header-->
            <div class="btn-group-sm">
                <a class="btn btn-primary" asp-route-id="" asp-controller="Department" asp-action="Index">
                    <i class="fa fa-list"></i>
                    Department List
                </a>
            </div>
            <div class="card-header"><div class="card-title">Department Information</div></div>
            <!--end::Header-->
            <!--begin::Form-->
            <form asp-action="Save" method="post">

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }
                <!--begin::Body-->
                <div class="card-body">

                    <div class="row mb-3">
                        <label asp-for="Name" class="col-sm-3 col-form-label">Name</label>
                        <div class="col-sm-9">
                            <input asp-for="Name" class="form-control" id="Name">
                        </div>
                    </div>


                    <div class="row mb-3">
                        <label asp-for="MobileNo" class="col-sm-3 col-form-label">MobileNo</label>
                        <div class="col-sm-9">
                            <input asp-for="MobileNo" class="form-control" id="MobileNo">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="UserName" class="col-sm-3 col-form-label">UserName</label>
                        <div class="col-sm-9">
                            <input asp-for="UserName" class="form-control" id="UserName">
                           
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Password" class="col-sm-3 col-form-label">Password</label>
                        <div class="col-sm-9">
                            <input asp-for="Password" class="form-control" id="Password">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">Status</label>
                        <div class="col-sm-9">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="Status" value="true" id="statusActive" />
                                <label class="form-check-label" for="statusActive">Active</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="Status" value="false" id="statusInactive" />
                                <label class="form-check-label" for="statusInactive">Inactive</label>
                            </div>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>


                </div>
                <!--end::Body-->
                <!--begin::Footer-->
                <div class="card-footer d-flex justify-content-center">
                    <button type="submit" class="btn btn-warning me-2">Save</button>
                    <button type="reset" class="btn btn-danger me-2">Reset</button>
                </div>
                <!--end::Footer-->
            </form>
            <!--end::Form-->
        </div>
        <!--end::Horizontal Form-->
    </div>
</div>
