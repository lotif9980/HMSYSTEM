@* @model IEnumerable<User> *@
@using HMSYSTEM.ViewModels
@model PaginationViewModel<User>

@* @foreach(Patient patient in Model)
{
   @patient.Name
} *@

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-around">
                    <div> <h3 class="card-title">Existing User List</h3></div>
                    <div> <a class="btn btn-info" asp-controller="User" asp-action="Save">Create</a></div>
                    <div><input type="text" class="form-control" placeholder="search Name" id="searchBox" /></div>
                </div>



                <!-- /.card-header -->
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width:60px">Sl No</th>
                                <th>Name</th>
                                <th>Mobile No </th>
                                <th>User Name </th>
                                <th>Status</th>
                                <th style="width:20px;text-align:center">Action</th>
                            </tr>
                        </thead>
                        <tbody id="dataShow">
                            @{
                                int count = 1;
                            }
                            @foreach (User item in Model.Items)
                            {
                                <tr>
                                    <td>@count</td>

                                    <td>@item.Name</td>
                                    <td>@item.MobileNo</td>
                                    <td>@item.UserName</td>
                                    <td >
                                        <a asp-action="GetStatusUpdate" asp-route-id="@item.Id"
                                           class="btn btn-sm @(item.Status == true ? "btn-success" : "btn-danger")">
                                            @(item.Status == true ? "Active" : "Inactive")
                                        </a>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center btn-group-sm ">

                                            <a class="btn btn-primary ms-2" asp-route-id="@item.Id" asp-controller="User" asp-action="Edit">
                                                <i class="fa fa-edit"></i>
                                            </a>

                                            <a class="btn btn-danger ms-2" asp-route-id="@item.Id" asp-controller="User" asp-action="Delete">
                                                <i class="fa fa-trash"></i>
                                            </a>

                                            <a class="btn btn-success ms-2" asp-route-id="@item.Id" asp-controller="User" asp-action="Details">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                count++;
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
                <div class="card-footer clearfix">
                    <ul class="pagination pagination-sm m-0 float-end">
                        <ul class="pagination pagination-sm m-0 float-end">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link" href="?page=@(Model.CurrentPage - 1)">Previous</a>
                            </li>

                            <!-- Page Numbers -->
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="?page=@i">@i</a>
                                </li>
                            }

                            <!-- Next Button -->
                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link" href="?page=@(Model.CurrentPage + 1)">Next</a>
                            </li>
                        </ul>
                    </ul>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>





<script>
    $(document).ready(function(){
        $("#searchBox").on('keyup',function(){
            var name=$(this).val();

            $.ajax({
                url:'/User/GetSearch',
                data:{name:name},
                success:function(data){
                    let rows='';

                    data.forEach(item=>{
                        rows+=`<tr>
                        <td>${item.id}</td>
                        <td>${item.name}</td>
                        <td>${item.mobileNo}</td>
                        <td>${item.userName}</td>
                        <td>${item.status==true ? "Active" : "Invactive"}</td>
                        <td>
                            <div class="d-flex justify-content-center btn-group-sm">
                                    <a class="btn btn-primary ms-2" href="/User/Edit/${item.id}">
                                        <i class="fa fa-edit"></i>
                                    </a>

                                    <a class="btn btn-danger ms-2" href="/User/Delete/${item.id}">
                                        <i class="fa fa-trash"></i>
                                    </a>

                                    <a class="btn btn-success ms-2" href="/User/Details/${item.id}">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                </div>
                        </td>
                        </tr>`
                    })

                    $("#dataShow").html(rows);
                }
            })
        });



    })
</script>